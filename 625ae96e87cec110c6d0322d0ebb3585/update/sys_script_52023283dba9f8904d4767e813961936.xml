        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    // Add your code here

    var ci_sn = current.incident.cdmb_ci.serial_number;
    if (ci_sn == '' || current.incident == '') {
        gs.addErrorMessage("Incident CI does not have Serial Number, hence Lightning Task cannot be created");
    } else {

        var lt = new DellNewLightningUtils().createCase(current.incident, current.number);
        if (lt == '') {
            current.setAbortAction(true);

            gs.addErrorMessage('Case not created -connection issue, please report an incident');
        } else {


            var obj1 = new JSON().decode(lt);
            var num1 = obj1['caseNumber'];
            var num2 = obj1['id'];
            gs.addInfoMessage('Case Created successfully ' + num1);
            current.work_notes = 'Lightning case Created Successfully ' + num1;
            var inc = new GlideRecord('incident');
            inc.addQuery('sys_id', current.incident);
            inc.query();
            if (inc.next()) {
                inc.u_lightning_case = num1;
                inc.u_lightning_id = num2;
                inc.work_notes = 'Lightning case Created Successfully ' + num1;
				inc.u_source_type = 'NGCS';
                inc.update();
            }
        }
    }
})(current, previous);]]></script>
